<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_6dp">

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:text="dd/MM/yyyy at hh:mm"
        android:textSize="@dimen/text_size10"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_2dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_6dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:src="@drawable/ic_feedback"
        android:layout_below="@id/txt_time" />

    <ImageView
        android:id="@+id/img_emoji"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_feedback"
        android:layout_alignTop="@id/img_avatar"
        android:layout_toEndOf="@id/img_avatar"
        android:layout_toRightOf="@id/img_avatar"/>

    <TextView
        android:id="@+id/txt_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_emoji"
        android:layout_marginRight="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_alignStart="@id/img_emoji"
        android:text="@string/seen"
        android:fontFamily="@font/lato_regular"
        android:textSize="@dimen/text_size10"
        android:visibility="gone" />
</RelativeLayout>

